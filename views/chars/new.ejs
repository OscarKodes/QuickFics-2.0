<%- include ../partials/header %>

    <h1 class="text-center my-4">New Character</h1>

    <div class="preview-container">
      <p class="char-name-preview">
        <em>Name Preview</em>
        <span class="mt-3" id="name-preview"></span>
      </p>
    </div>

    <form class="" action="/fics/<%= fic_id %>/chars" method="post">
      <input id="name-input" type="text" name="char[name]" placeholder="Name" maxlength="16" required>
      <input type="text" name="char[description]" placeholder="Describe character in one short phrase." maxlength="100">

      <div class="bg-white border-top border-bottom py-3 text-center">
        <label for="font-color-input">Font Color</label>
        <input id="font-color-input" type="color" name="char[fontColor]" value="#000000">
        <label class="ml-2" for="highlight-input">Highlight Color</label>
        <input id="highlight-input" type="color" name="char[highlight]" value="#FFFFFF">
      </div>

      <button class="btn btn-xl btn-primary py-3 w-100 rounded-0 mt-4" type="submit" name="button">Submit</button>
    </form>

<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- Script for preview container -->
<script src="/scripts/char-new-edit-color-preview.js" charset="utf-8"></script>

<%- include ../partials/footer %>
