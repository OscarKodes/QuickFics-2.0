<%- include ../partials/header %>


    <div class="char-select d-flex flex-row">
      <% chars.forEach(function(char){ %>
          <p class="char-btn border p-2 m-1"
          style="color:<%=char.fontColor%>;
          background-color:<%=char.highlight%>;">
            <%= char.name %>
          </p>
      <% }) %>
    </div>

    <h1>Ep edit!</h1>

    <form class="" action="/fics/<%=fic_id%>/eps/<%= ep_num %>?_method=PUT" method="post">

      <input type="text" name="title" placeholder="Title" value="<%=ep.title%>">

      <!-- Render dialogue already created -->
      <% ep.char.forEach(function(char, i){ %>
        <div class="border bg-light text-center my-2">
          <p style="color:<%=ep.fontColor[i]%>;
            background-color:<%=ep.highlight[i]%>;">
            <%= char %></p>
          <input class="dialogue-name-input d-none" type="text"
            name="char" value="<%= char %>">
          <input class="" type="color"
            value="<%=ep.fontColor[i]%>" name="fontColor">
          <input class="" type="color"
            value="<%=ep.highlight[i]%>" name="highlight">
          <input type="text" name="text" placeholder="Enter Text Here"
            value="<%= ep.text[i] %>">
        </div>
      <% }) %>

      <button id="submit-btn" class="btn btn-lg btn-dark" type="submit" name="button">Submit</button>
    </form>

    <!-- Invisble div to be cloned by DOM -->
    <div class="d-none dialogue-form border bg-light text-center my-2">
      <p class="dialogue-name"></p>
      <input class="dialogue-name-input d-none" type="text" name="char">
      <input class="font-color-input" type="color" name="fontColor">
      <input class="highlight-input" type="color" name="highlight">
      <input type="text" name="text" placeholder="Enter Text Here">
    </div>


      <!-- Back to Fic Button -->
      <a class="btn btn-secondary" href="/fics/<%= fic_id %>/">Back to Fic Page</a>



<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- New Episode JavaScripts -->
<script src="/scripts/char-form.js" charset="utf-8"></script>

<%- include ../partials/footer %>
