<%- include ../partials/header %>


    <div class="char-select d-flex flex-row">
      <% chars.forEach(function(char){ %>
        <div class="char-btn border p-1 m-1 bg-light">
          <p><%= char.name %></p>
        </div>
      <% }) %>
    </div>

    <h1>Ep edit!</h1>

    <form class="" action="/fics/<%=fic_id%>/eps/<%= ep_num %>?_method=PUT" method="post">
      <input type="text" name="title" placeholder="Title">

      <!-- Render dialogue already created -->
      <% ep.char.forEach(function(char, i){ %>
        <div class="dialogue-form border bg-light text-center my-2">
          <p class="dialogue-name"><%= char %></p>
          <input class="dialogue-name-input d-none" type="text"
            name="char" value="<%= char %>">
          <input type="text" name="text" placeholder="Enter Text Here"
            value="<%= ep.text[i] %>">
        </div>
      <% }) %>

      <button id="submit-btn" class="btn btn-lg btn-dark" type="submit" name="button">Submit</button>
    </form>

    <!-- Invisble div to be cloned by DOM -->
    <div class="d-none dialogue-form border bg-light text-center my-2">
      <p class="dialogue-name"></p>
      <input class="dialogue-name-input d-none" type="text" name="char">
      <input type="text" name="text" placeholder="Enter Text Here">
    </div>


<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- New Episode JavaScripts -->
<script src="/scripts/char-form.js" charset="utf-8"></script>

<%- include ../partials/footer %>
