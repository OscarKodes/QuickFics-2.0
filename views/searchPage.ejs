<%- include ./partials/header %>

<div class="text-center mt-5 mb-4">
  <h1 class="mt-3 mb-4 ">Search</h1>
  <div id="search-box">
    <form class="mt-3" action="/search/" method="get">
      <input type="text" placeholder="Search Fics" name="keyword">
      <button class="btn btn-light ml-2 mb-3 btn-lg" type="submit">
        <i class="fas fa-search fa-lg" SameSite=None Secure></i>
      </button>
    </form>
  </div>
  <% if (keyword.length > 0) { %>
    <hr>
    <h2 class="mt-4"><em><%=keyword%></em></h2>
    <h4 class="mt-3 mb-4">Search Results</h4>
    <p><%=fics.length === 1 ? "1 result found." : fics.length + " results found."%></p>
  <% }%>
</div>

<% if (keyword.length > 0) { %>
  <% fics.forEach(function(fic){ %>
    <a class="text-dark text-decoration-none" href="/fics/<%= fic._id %>">
      <div class="bg-white fic-card">
        <h2><%=fic.title%></h2>
        <p class="author-name-grey"><%=fic.author.name ? fic.author.name : fic.author.username %></p>
        <p><%=fic.description%></p>
      </div>
    </a>
  <% }); %>
<% } %>



<%- include ./partials/footer %>
