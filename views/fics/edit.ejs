<%- include ../partials/header %>
    <h1>Edit Page woo hoooo</h1>

    <form class="" action="/fics/<%=fic._id%>?_method=PUT" method="post">
      <input type="text" name="fic[title]"
      value="<%=fic.title%>" placeholder="Title">
      <input type="text" name="fic[description]"
      value="<%=fic.description%>" placeholder="Description">
      <button type="submit" name="button">Submit</button>
    </form>

    <a class="btn btn-lg btn-secondary" href="/fics/<%= fic._id %>">Back to fic</a>

    <form class="" action="/fics/<%= fic._id %>?_method=DELETE" method="post">
      <button class="btn btn-outline-danger btn-sm" type="submit" name="button">
        Delete this fic</button>
    </form>


<%- include ../partials/footer %>
