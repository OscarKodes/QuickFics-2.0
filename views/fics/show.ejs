<%- include ../partials/header %>

  <div class="fic-header text-center">
    <h1 class="display-3 my-4">
      <%= fic.title %>
    </h1>
    <p>
      <%=fic.author.name ? fic.author.name : fic.author.username %>
    </p>
    <p>
      <%= fic.description %>
    </p>

    <div class="shadow-lg">
      <% if (currentUser && currentUser._id.equals(fic.author._id)) { %>
        <a class="btn btn-lg btn-primary py-3 w-100 rounded-0" href="/fics/<%= fic._id %>/eps/new">
          <i class="fas fa-plus mr-1"></i> Add New Episode</a>
      <% } %>

      <% if (currentUser && currentUser._id.equals(fic.author._id)) { %>
        <a class="btn btn-lg btn-secondary py-3 w-100 rounded-0" href="/fics/<%= fic._id %>/chars/new">
          <i class="fas fa-plus mr-1"></i> Add Character</a>
      <% } %>

      <a class="btn btn-lg btn-secondary py-3 w-100 rounded-0" href="/fics/<%= fic._id %>/chars">
        <i class="fas fa-th-large mr-1"></i> View Characters
      </a>

      <% if (currentUser && currentUser._id.equals(fic.author._id)) { %>
        <a class="btn btn-lg btn-secondary py-3 w-100 rounded-0" href="/fics/<%= fic._id %>/edit">
          <i class="fas fa-edit mr-1"></i> Edit Fic Details
        </a>
      <% } %>

    </div>



  </div>

  <div class="text-center bg-light border rounded m-3 shadow-lg overflow-hidden">
    <h2 class="my-4">Episode List</h2>

    <% fic.eps.forEach(function(ep, i){ %>
        <a class="episode-link nav-link bg-light" href="/fics/<%= fic._id %>/eps/<%= i + 1 %>">
          <p class="text-dark">Episode <%= i + 1 %>: <%= ep.title %></p>
        </a>
    <% }) %>
  </div>


<%- include ../partials/footer %>
