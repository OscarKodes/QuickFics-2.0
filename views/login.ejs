<%- include ./partials/header %>
    <h1 class="text-center my-4 display-4">Log In</h1>

    <div class="container mb-4 text-center">
      <a class="btn btn-danger btn-lg shadow-lg social-btn"
        href="/auth/google">
        <i class="fab fa-google fa-lg float-left mt-1"
         SameSite=None Secure></i>Sign in with Google</a>
    </div>

    <div class="container mb-5 text-center">
      <a class="btn btn-primary btn-lg shadow-lg social-btn"
        href="/auth/facebook">
        <i class="fab fa-facebook-square fa-lg float-left mt-1"
         SameSite=None Secure></i>Sign in with Facebook</a>
    </div>

    <form class="text-center" action="/login" method="post">
      <input class="shadow" type="text" name="username" placeholder="Username" minlength=3>
      <input class="border-bottom shadow" type="password" name="password" placeholder="Password" minlength=8>
      <button class="btn btn-xl btn-dark mt-4 py-1 shadow" type="submit" name="button">Login</button>
    </form>



<%- include ./partials/footer %>
